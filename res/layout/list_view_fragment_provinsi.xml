<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<Button
	    android:id="@+id/viewProvinsi"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/data_provinsi"
	    android:background="@color/seperatorDataSapi"
	    android:enabled="false"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true">
	</Button>
    <ListView
        android:id="@+id/ListFragmentProvinsi"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fastScrollEnabled="true"
        android:scrollbars="vertical"
        android:smoothScrollbar="true" 
        android:layout_above="@+id/buttonAddProvinsi"
        android:layout_below="@+id/viewProvinsi">
    </ListView>
	<Button
	    android:id="@+id/buttonAddProvinsi"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Add Provinsi"
	    android:layout_alignParentBottom="true">
	    
	</Button>
</RelativeLayout>

