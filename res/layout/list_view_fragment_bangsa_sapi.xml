<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/viewBangsaSapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/seperatorDataSapi"
        android:enabled="false"
        android:text="@string/data_bangsa_sapi" >
    </Button>

    <ListView
        android:id="@+id/ListFragmentBangsaSapi"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttonAddBangsaSapi"
        android:layout_below="@+id/viewBangsaSapi"
        android:fastScrollEnabled="true"
        android:scrollbars="vertical"
        android:smoothScrollbar="true" >
    </ListView>

    <Button
        android:id="@+id/buttonAddBangsaSapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add Bangsa Sapi" >
    </Button>

</RelativeLayout>