<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvNITEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="NIT :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/edtNITEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvNITEditDataSapi"
            android:layout_alignLeft="@+id/edtLokasiEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvNITEditDataSapi"
            android:hint="NIT"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvLokasiEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNITEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Lokasi :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <Spinner
            android:id="@+id/spinLokasiEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvBangsaEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Bangsa :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <Spinner
            android:id="@+id/spinBangsaEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Bangsa"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvTanggalLahirEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBangsaEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Tanggal Lahir :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/edtTanggalLahirEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvTanggalLahirEditDataSapi"
            android:layout_alignLeft="@+id/edtLokasiEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvTanggalLahirEditDataSapi"
            android:hint="Tanggal Lahir"
            android:textColor="@color/black"
            android:textSize="18sp" 
            android:inputType="date"/>
        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvNITIndukEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTanggalLahirEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="NIT Induk :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/edtNITIndukEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvNITIndukEditDataSapi"
            android:layout_alignLeft="@+id/edtLokasiEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvNITIndukEditDataSapi"
            android:hint="NIT Induk"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvBentukWajahEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNITIndukEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Bentuk Wajah :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/edtBentukWajahEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvBentukWajahEditDataSapi"
            android:layout_alignLeft="@+id/edtLokasiEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvBentukWajahEditDataSapi"
            android:hint="Bentuk Wajah"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvWarnaEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBentukWajahEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Warna :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/edtWarnaEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvWarnaEditDataSapi"
            android:layout_alignLeft="@+id/edtLokasiEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvWarnaEditDataSapi"
            android:hint="Warna"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvStatusPunukEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWarnaEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Status Punuk :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <Spinner
            android:id="@+id/spinStatusPunukEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtLokasiEditDataSapi"
            android:layout_alignTop="@+id/tvStatusPunukEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvStatusPunukEditDataSapi"
            android:hint="Status Punuk"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvStatusAksesorisKakiEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStatusPunukEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Status Aksesoris Kaki :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <Spinner
            android:id="@+id/spinStatusAksesorisKakiEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtLokasiEditDataSapi"
            android:layout_alignTop="@+id/tvStatusAksesorisKakiEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvStatusAksesorisKakiEditDataSapi"
            android:hint="Status Aksesoris Kaki"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!-- ////////////////////////// -->

        <TextView
            android:id="@+id/tvStatusKepemilikanEditDataSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStatusAksesorisKakiEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Status Kepemilikan :"
            android:textColor="@color/black"
            android:textSize="18sp" >
        </TextView>

        <Spinner
            android:id="@+id/spinStatusKepemilikanEditDataSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtLokasiEditDataSapi"
            android:layout_alignTop="@+id/tvStatusKepemilikanEditDataSapi"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvStatusKepemilikanEditDataSapi"
            android:hint="Status Kepemilikan"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!-- ////////////////////////// -->

        <!-- <Button
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStatusKepemilikanEditDataSapi"
            android:text="Edit" /> -->
    </LinearLayout>

</ScrollView>