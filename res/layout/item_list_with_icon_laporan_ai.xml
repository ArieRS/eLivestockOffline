<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/linearItemLaporanAI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imageIconLaporanAI"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvKodeStrawLaporanAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Straw"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNITLaporanAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIT"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvIdLokasiLaporanAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Lokasi"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNamaKontakLaporanAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Kontak"
            android:textColor="@color/black"
            android:textSize="14sp" />
		<TextView
            android:id="@+id/tvLokasiLaporanAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageIconLaporanAI"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_home" />

</RelativeLayout>